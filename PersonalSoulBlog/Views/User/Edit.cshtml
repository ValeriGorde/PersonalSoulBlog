@model PersonalSoulBlog.ViewModels.Users.EditUserRequest

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-md-6 offset-md-3">
            <form method="POST">
                <legend>Редактирование пользователя</legend>
                <div>
                    <label>Роли:</label>
                    @if (Model is not null)
                    {
                        @for (int i = 0; i < Model.Roles.Count; i++)
                        {
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" name="Roles[@i].IsSelected" value="true" @(Model.Roles[i].IsSelected ? "checked" : "")>
                                <input type="hidden" name="Roles[@i].RoleId" value="@Model.Roles[i].RoleId">
                                <input type="hidden" name="Roles[@i].RoleName" value="@Model.Roles[i].RoleName">
                                <label class="form-check-label">@Model.Roles[i].RoleName</label>
                            </div>
                        }
                    }
                </div>
                
                <div class="mb-3">
                    <label for="txtName" class="form-label">Имя</label>
                    <input asp-for="FirstName" type="text" class="form-control" id="txtName" />
                </div>
                <div class="mb-3">
                    <label for="txtCost" class="form-label">Фамилия</label>
                    <input asp-for="LastName" type="text" class="form-control" id="txtCost" />
                </div>
                <div class="mb-3">
                    <label for="txtCost" class="form-label">Почта</label>
                    <input asp-for="Email" type="text" class="form-control" id="txtCost" />
                </div>               
                <button type="submit" class="btn btn-primary">Изменить</button>
                <br /> <br />
                <div class="mb-3">
                    <a asp-controller="Tag" asp-action="Index">Вернуться к списку пользователей</a>
                </div>
            </form>
        </div>

    </div>

</div>